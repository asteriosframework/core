{
    "name": "Asterios PHP Nginx Devcontainer",
    "dockerComposeFile": [
        "docker-compose.yml"
    ],
    "service": "php",
    "workspaceFolder": "/var/www",
    "remoteUser": "vscode",
    "customizations": {
        "vscode": {
            "extensions": [
                "felixfbecker.php-debug",
                "bmewburn.vscode-intelephense-client",
                "esbenp.prettier-vscode"
            ],
            "settings": {
                "php.validate.executablePath": "/usr/local/bin/php"
            }
        }
    },
    "forwardPorts": [
        8080,
        3306
    ]
}